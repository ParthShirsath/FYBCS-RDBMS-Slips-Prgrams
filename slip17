create or replace function disp_teacher(name varchar) returns void as
$$
declare
c1 cursor for select t_name from teacher,student,st where student.sno=st.sno
and teacher.tno=st.tno
and sname=name;
name1 varchar(20);
begin
open  c1;
loop
fetch c1 into name1;
exit when not found;
raise notice'Teacher name=%',name1;
end loop;
close c1;
end;
$$
language plpgsql;
__________________________________________________________________________________________________________________
create or replace function disp_exp() returns int
as $$
declare
cnt int;
begin
select count(*) into cnt from teacher where yrs_experience>9;
return cnt;
end;
$$
language plpgsql;
calling--
select disp_exp();


